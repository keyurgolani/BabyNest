# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
API_URL=http://localhost:3000

# Database - PostgreSQL
DATABASE_URL="postgresql://babynest:babynest@localhost:5432/babynest?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Ollama AI (Default/Fallback Provider)
# These settings are used as the default AI provider when users haven't configured their own
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_VISION_MODEL=llava

# User-Configurable AI Providers
# Users can configure their preferred AI providers through the API:
# - GET /api/v1/ai-config/providers - List available providers
# - GET /api/v1/ai-config - Get current configuration
# - PUT /api/v1/ai-config - Update configuration
# - POST /api/v1/ai-config/test - Test a provider configuration
#
# Supported providers:
# - ollama (default, local)
# - openai (requires API key)
# - anthropic (requires API key)
# - gemini (requires API key)
# - openrouter (requires API key)

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
